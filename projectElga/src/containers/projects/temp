  CircleProjectScreen = () => {
    const { loading, circleData = [], error } = this.props.circle;
    return loading ? (
      error ? (
        <NothingHere
          text="Nothing Here! Comeback later ðŸ‘‹"
          image={IMAGES.NoPending}
